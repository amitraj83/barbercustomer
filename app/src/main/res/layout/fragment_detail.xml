<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_White"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_barber"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logo"/>

            <TextView
                android:layout_marginTop="20dp"
                style="@style/txt.black.16.medium"
                android:text="John Smith"
                android:textColor="@color/custom_White"/>

            <TextView
                style="@style/txt.black.16.medium"
                android:text="Address : Street Name"
                android:textColor="@color/custom_White"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="25dp"
            style="@style/txt.black.12.light"
            android:text="You are 5th in the queue and you waiting time is:"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/btn_back_time">

            <TextView
                style="@style/txt.black.14.bold"
                android:textColor="@color/custom_DarkBlue"
                android:text="1 h"/>

            <TextView
                style="@style/txt.black.14.bold"
                android:textColor="@color/custom_DarkBlue"
                android:text="10 m"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_detail_join"
                android:layout_width="120dp"
                android:layout_height="30dp"
                style="@style/txt.black.14.medium"
                android:textAllCaps="false"
                android:textColor="@color/custom_White"
                android:text="Join Queue"
                android:background="@drawable/btn_back_join"/>

            <Button
                android:id="@+id/btn_detail_leave"
                android:layout_marginLeft="40dp"
                android:layout_width="120dp"
                android:layout_height="30dp"
                style="@style/txt.black.14.medium"
                android:textAllCaps="false"
                android:textColor="@color/custom_White"
                android:text="Leave Queue"
                android:background="@drawable/btn_back_leave"/>
        </LinearLayout>

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="50dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/img_detail_back"/>
    </LinearLayout>

</LinearLayout>